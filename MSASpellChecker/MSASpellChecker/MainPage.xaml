<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MSASpellChecker"
             x:Class="MSASpellChecker.MainPage"
             Title="Main">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="5,10">
                <Label TextColor="#77d065" FontSize = "40" Text="Spell Checker" HorizontalOptions="Center"/>
                <StackLayout BackgroundColor="Black" Padding="1">
                    <Editor x:Name="text1" Text="Our engineers developde this four you! He will be their in 5 minutes. A new service from micros oft! Our service is like lyft for word processing!" HeightRequest="100" BackgroundColor="White"/>
                </StackLayout>
                <Button x:Name ="CheckButton" Text="Check" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Clicked="OnClick" />
                <Label TextColor="#77d065" FontSize = "30" Text="RESULTS" HorizontalOptions="Center"/>
                <Label x:Name="Result" FontSize = "16" HorizontalOptions="Center"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>